<div class="panel panel-default">
<div class="panel-heading"><h2><%= @page_title %></h2></div>

	<div class="panel-body">
			<% if @pin.image? %>
					<%= cl_image_tag(@pin.image.path, { size: '300x300', crop: :thumb, gravity: :face }) %>
			<% end %>
	<p>
		<strong>Description:</strong>
		<%= @pin.description %>
	</p>	
	</div>
	<div class="panel-footer">
		<%= link_to 'Edit', edit_pin_path(@pin) %> |
		<%= link_to 'Back', pins_path %>
	</div>
</div>


